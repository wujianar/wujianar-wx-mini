.container {
    width: 100%;
    height: 100vh;
}

.controller {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    z-index: 50;
    width: 100%;
}

.welcome {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.6);
    z-index: 10;
}

.title {
    font-size: 32rpx;
    font-weight: bold;
    color: #FFFFFF;
}

.button-holder {
    position: absolute;
    bottom: 15%;
    width: 100%;
    text-align: center;
}

.save {
    margin-top: 8rpx;
}

.support {
    position: absolute;
    bottom: 2%;
    margin: 0 auto;
    width: 100vw;
    text-align: center;
    z-index: 100;
    color: #FFFFFF;
}

.back-icon{
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    top: 30rpx;
    left: 30rpx;
    z-index: 200;
}

.camera {
}

.three {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
}

.scan-wrap {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 100;
    width: 100%;
    height: 100vh;
    text-align: center;
}

.scan-line {
    width: 80%;
    height: 2px;
    animation: scan 3s infinite linear;
}

@keyframes scan {
    0% {
        margin-top: 20vh;
    }
    100% {
        margin-top: 80vh;
    }
}